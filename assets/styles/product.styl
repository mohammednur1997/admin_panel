@import "./variables.styl"

.product-form
  position relative
  display flex
  gap 15px
  max-width 1100px
  margin 0 auto
  flex-direction row-reverse

  .left-area
    width 100%
    flex-grow 1

  .right-area
    width 400px

    .tab-sidebar
      min-width 0

      .product-images
        flex-wrap wrap
        justify-content flex-start
        align-items baseline

        .img-wrapper
          position relative
          padding-bottom 100%
          background #fff
          border-radius 4px
          border 1px solid #ddd

          button
            height 25px
            line-height 23px
            width 25px
            padding 0
            text-align center
            position absolute
            top -10px
            right -10px
            background #eee
            border 1px solid #ddd
            border-radius 50px
            font-size 15px

          img
            border-radius 4px
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            object-fit cover


/* RESPONSIVE */
@media only screen and (max-width: 1200px)
  .product-form
    flex-direction column

    .left-area
      margin-right 0

    .right-area
      width 100%

      .sticky
        display flex
        margin 0 -7.5px 15px

        .form-inner
          margin 0 7.5px

          .product-images
            .w-50
              width 150px

@media only screen and (max-width: 992px)
  .product-form
    .right-area
      .sticky
        margin 0
        flex-direction column

        .form-inner
          margin 0 0 15px

@media only screen and (max-width: 768px)
  .product-form
    .right-area
      .sticky
        .form-inner
          .file-wrapper

            .file-input
              margin 10px 0 0

@media only screen and (max-width: 576px)
  .product-form
    .right-area
      min-width 0

      .sticky
        flex-direction column
        margin 0

        .form-inner
          width 100%
          margin 0 0 10px

          &:last-child
            margin-top 0

          .file-input
            padding 0
            max-width 300px

            &:after
              content ''
              padding-top 100%
