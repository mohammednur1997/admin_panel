@import "./variables.styl"

.login-container
  position absolute
  height 100%
  width 100%
  left 0
  bottom 0
  display flex
  padding 0 250px 100px
  align-items center
  justify-content space-between
  z-index 1

  &:before
    content ''
    position absolute
    height 100%
    width 100%
    left 0
    bottom 0
    background #E8F0FE
    z-index -2

  &:after
    opacity .02
    content ''
    position absolute
    height 100%
    width 100%
    left 0
    bottom 0
    background-image url(bg2)
    background-repeat no-repeat
    z-index -1
    background-size cover

  &>img
    margin-top 30px
    width 550px
    opacity .3

  .login-form
    max-width 400px
    min-width 400px
    padding 30px
    border 1px solid #ddd
    border-radius 6px
    background #fff

    .ajax-btn
      width 100%
      display flex

//RESPONSIVE
@media only screen and (max-width: 1600px)
  .login-container
    padding 0 150px 100px

@media only screen and (max-width: 1400px)
  .login-container
    &>img
      width 400px

@media only screen and (max-width: 1200px)
  .login-container
    padding 0
    align-items center
    justify-content center

    & > img
      display none

@media only screen and (max-width: 768px)
  .login-container
    & > img
      margin-top 15px

    .login-form
      padding 15px


@media only screen and (max-width: 576px)
  .login-container
    .login-form
      margin 0 15px
      width 100%
      min-width 0
