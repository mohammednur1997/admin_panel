@import "./variables.styl"

.form-wrapper
  position relative
  padding 20px

  .dply-felx.inputs
    gap 10px

    .input-wrapper:last-child
      .dropdown-inner
        right 0
        left auto


.file-wrapper > button span
  overflow visible

.file-wrapper
  display flex
  gap 15px
  align-items center

  .file-input
    overflow hidden
    height 300px
    width 300px
    position relative
    display flex
    align-items center
    border-radius 5px
    border 1px dashed #ddd

    input[type="file"]
      opacity 0
      position absolute
      top 0
      height 100%
      left 0
      right 0

    img
      height auto
      width auto
      max-width 100%
      max-height 100%
      margin auto

  & > button
    width 50px

.upload-block
  display block
  .file-input
    width 100%
    height auto
    margin-bottom 15px
    margin-right 0
    min-height 60px

  & > button
    width 100%


/* RESPONSIVE */
@media only screen and (max-width: 992px)
  .form-wrapper
    padding 15px

@media only screen and (max-width: 768px)
  .file-wrapper
    .file-input
      width auto
      height auto
      max-width 350px
      max-height 350px

  .form-wrapper
    position relative
    padding 20px

    .dply-felx.inputs
      .input-wrapper:last-child
        .dropdown-inner
          right auto
          left 50%
