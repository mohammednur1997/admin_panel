@import "./variables.styl"

.pagination
  border-radius 5px
  margin-top 15px
  background #fff
  border 1px solid #eee
  display flex

  li
    height 40px
    display flex
    align-items center
    justify-content center
    min-width 45px
    flex-grow 1
    cursor pointer
    user-select none
    transition all .1s
    border-right 1px solid #eee

    &:hover
      background primary-lite-color

    &:last-child
      border-right 0

    .icon
      opacity .6
      height 18px
      width 18px
      min-width 18px

  .disabled
    opacity .8
    cursor not-allowed

    &:hover
      background #fff

  .page.disabled
    opacity 1
    font-weight 700
    background primary-color
    color white
