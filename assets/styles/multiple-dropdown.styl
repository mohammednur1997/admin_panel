@import "./variables.styl"
.img-attr-wrap
  position relative

.img-attr-wrap .multiple-wrap > label
  width calc(50% - 5px)

.multiple-wrap
  left 0
  padding 20px
  width 100%
  position absolute
  top 100%
  z-index 1
  display flex
  flex-wrap wrap
  gap 10px
  background #fff
  border-radius 8px
  max-height 300px
  overflow auto
  box-shadow 0 1px 30px rgba(0, 0, 0, .1)

  & > label
    width calc(50% - 20px)
    cursor pointer

.to-bottom.multiple-wrap
  top auto
  bottom 100%
