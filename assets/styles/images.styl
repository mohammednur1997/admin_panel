.image-container{
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
}


.image-container > div{
  display: flex;
  padding: 10px;
  gap: 10px;
  flex-direction: column;
  position: relative;
  width: 180px;
  min-width: 180px;
  justify-content: space-between;
}

.image-container > div button{
  height: 25px;
  line-height: 23px;
  width: 25px;
  padding: 0;
  text-align: center;
  position: absolute;
  top: -10px;
  right: -10px;
  background: #eee;
  border: 1px solid #ddd;
  border-radius: 50px;
  font-size: 15px;
}




.image-container img{
  width: 100%;
  max-width: 100%;
  max-height: 150px;
  height: auto;
}
