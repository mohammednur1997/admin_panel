@import "./variables.styl"

.rtl .tab-sidebar > .dply-felx > .right-area
  border-left 0
  border-right 1px solid #eee

.tab-sidebar
  background #fff
  min-width 650px
  max-width 1200px
  margin 0 auto
  border-radius 10px
  flex 1
  box-shadow 0 1px 2px rgba(0, 0, 0, .2), 1px -1px 2px rgba(0, 0, 0, .07), 0 -1px 2px rgba(0, 0, 0, .1)

  .title
    padding 15px 20px
    border-bottom 1px solid #eee

  & > .dply-felx
    align-items flex-start
    padding 20px 0

    & > .left-area
      padding 0 20px
      width 200px
      min-width 200px

      li
        font-weight 600
        margin 0 0 20px
        padding-left 10px
        cursor pointer
        user-select none
        display block

        a
          display block

      .active
        color primary-color
        border-left 2px solid primary-color

    & > .right-area
      /*min-width calc(100% - 150px)*/
      padding 0 20px
      border-left 1px solid #eee
      flex-grow 1

//RESPONSIVE
@media only screen and (max-width: 1200px)
  .tab-sidebar
    min-width 0
    width 100%

    .title
      padding 15px

    & > .dply-felx
      display block
      padding 0 0 15px

      & > .left-area
        width 100%
        padding 0 15px
        background #f5f6f5
        border-bottom 1px solid #ddd
        margin-bottom 15px

        li
          display inline-block
          padding 12.5px 0
          margin 0 15px 0 0

        .active
          border-left none
          border-bottom 1px solid primary-color

      & > .right-area
        min-width 0
        width 100%
        border-left none
        padding 0 15px

@media only screen and (max-width: 576px)
  .tab-sidebar
    .title
    & > .dply-felx
      & > .left-area
        font-size .9em
